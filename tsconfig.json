{
    "compilerOptions": {
      "target": "ES2022",
      "module": "NodeNext",
      "moduleResolution": "NodeNext",
      "esModuleInterop": true,
      "skipLibCheck": true,
      "forceConsistentCasingInFileNames": true,
      "resolveJsonModule": true,
      "baseUrl": ".",
      "paths": {
        "@market-research/api/*": ["packages/api/src/*"],
        "@market-research/ui/*": ["packages/ui/src/*"],
        "@market-research/tests/*": ["packages/tests/src/*"]
      }
    },
    "exclude": ["node_modules"]
  }